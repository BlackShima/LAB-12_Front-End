<%- include("partials/header") %> 
<div class="box" id="heading">
  <% if (user) { %>
    <h3 style="color: white; padding-top: 10px;">Hello, <%= user.username %></h3> 
    <p><a href="/logout" style="color: white; text-decoration: none;">Log out</a></p>
  <% } %>
  <h1> <%= listTitle %> </h1> </div>

<div class="box">
  <% newListItems.forEach(function(item) { %> <form action="/delete" method="post"> <div class="item">
        <input 
          type="checkbox" 
          name="checkbox" 
          value="<%=item.id %>" 
          onChange="this.form.submit()" 
        /> <p> <%= item.name %> </p> </div>
    </form>
  <% }) %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New item"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%= listTitle %>"> + </button>
  </form>
</div>

<%- include("partials/footer") %> ```